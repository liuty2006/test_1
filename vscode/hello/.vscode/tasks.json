{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build active file (Cross-platform)",
            "type": "shell",
            "command": "${env:OS}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": [
                    "-g",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "${file}"
                ],
                "problemMatcher": [
                    "$gcc"
                ]
            },
            "windows": {
                "command": "cl.exe",
                "args": [
                    "/Zi",
                    "/EHsc",
                    "/nologo",
                    "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "${file}"
                ],
                "problemMatcher": [
                    "$msCompile"
                ]
            },
            "osx": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-g",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "${file}"
                ],
                "problemMatcher": [
                    "$gcc"
                ]
            },
            "group": "build",
            "detail": "compiler: platform-dependent"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}