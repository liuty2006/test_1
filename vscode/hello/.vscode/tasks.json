{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: Build active file (Cross-platform)",
            "type": "shell",
            "command": "${env:OS}",  // 会被 platform override 替代
            "options": {
                "cwd": "${fileDirname}"
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": [
                    "-g",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "${file}"
                ],
                "problemMatcher": [
                    "$gcc"
                ]
            },
            "windows": {
                "command": "cl.exe",
                "args": [
                    "/Zi",
                    "/EHsc",
                    "/nologo",
                    "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                    "${file}"
                ],
                "problemMatcher": [
                    "$msCompile"
                ]
            },
            "osx": {
                "command": "/usr/bin/clang++",
                "args": [
                    "-g",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "${file}"
                ],
                "problemMatcher": [
                    "$gcc"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: platform-dependent"
        }
    ]
}
